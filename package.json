{
  "name": "herd-clone-windows",
  "version": "1.0.0",
  "description": "A Windows clone of Laravel Herd.",
  "main": ".vite/build/main.cjs",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "clean": "rimraf .vite",
    "dev": "electron-forge start"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-vite": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "37.3.1",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "4.1.12",
    "vite": "7.1.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "ace-builds": "^1.43.2",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.0.0-rc.12",
    "decompress": "^4.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "10.1.0",
    "extract-zip": "^2.0.1",
    "hostile": "^1.3.3",
    "html2canvas": "^1.4.1",
    "knex": "^3.1.0",
    "mongodb": "^6.19.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.4",
    "node-fetch": "3.3.2",
    "oracledb": "^6.9.0",
    "pg": "^8.16.3",
    "pg-query-stream": "^4.10.3",
    "react": "19.1.1",
    "react-ace": "^14.0.1",
    "react-dom": "19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "redis": "^5.8.2",
    "sqlite3": "^5.1.7",
    "tedious": "^18.6.1",
    "uuid": "^11.1.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "buildVersion": "1.0.0",
        "appId": "com.example.herd-clone-windows",
        "productName": "Herd Clone Windows",
        "files": [
          "dist/**/*",
          "electron/**/*",
          "node_modules/**/*",
          "package.json"
        ],
        "directories": {
          "buildResources": "assets",
          "output": "release"
        },
        "win": {
          "target": "nsis"
        },
        "nsis": {
          "oneClick": false,
          "allowToChangeInstallationDirectory": true
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "herd_clone_windows"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-vite",
          "config": {
            "build": [
              {
                "entry": "electron/main.cjs",
                "config": "vite.main.config.mjs"
              },
              {
                "entry": "electron/preload.cjs",
                "config": "vite.preload.config.mjs"
              }
            ],
            "renderer": [
              {
                "name": "main_window",
                "config": "vite.config.mjs"
              }
            ]
          }
        }
      ]
    }
  }
}
